<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

  <div><%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :value => current_user.email, class: "form-control" %></div>

  <div><%= f.submit "Resend confirmation instructions", data: { disable_with: "email sent" }, class: "btn btn-success" %></div>
<% end %>