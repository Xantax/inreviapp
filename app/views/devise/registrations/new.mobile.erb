<% meta title: "Sign Up" %>

<div align="center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <div><%= f.text_field :name, autofocus: true, placeholder: "name", class: "form-control" %></div><br>
    <div><%= f.email_field :email, placeholder: "email", class: "form-control" %></div><br>
    <div><%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "form-control" %></div><br>
        <%= image_tag('3/check_terms.png') %> I agree to <%= link_to "Terms & Privacy", terms_path %><br><br>
    <div><%= f.submit "Create my account", class: "btn btn-success" %></div>

  <% end %>  
</div>