<%= form_for([@user, @user.endorsements.build]) do |f| %>

    <%= f.text_area :body, class: "form-control", placeholder: 'Write something about a user', rows: 5 %>
    <%= f.hidden_field :writer_id, value: current_user.id %>
    <%= f.hidden_field :user_id, value: @user.id %> <br>

    <%= f.submit "Submit", class: 'btn btn-primary' %>
<% end %>