    <div class="col-xs-2">
      <%= link_to image_tag('logou8.png'), root_path %>
    </div>
  
    <div class="col-xs-5 header-search">
      <%= form_tag offerz_search_path, :method => :get do %>
       <%= text_field_tag :search, params[:search] , class: "form-control", autofocus: true %>  
      <% end %>
    </div>
  
    <div class="col-xs-2"></div>
      
    <div class="col-xs-3 user-header">
      <% if user_signed_in? %>
      <%= link_to image_tag('2/add_cred.png'), buycredit_path %><span class="badge alert-warning">
      <%= PromotedOffer.tot_sum %></span> | 
      <% end %>
      
      <%= link_to image_tag("1/messages3.png"), '/conversations' %>
      <% if Conversation.count_unread_conversations > 0 %>
        <span class="label label-danger"><%= Conversation.count_unread_conversations %></span>
      <% end %> |  
      
      <div class="btn-group" align="left">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
           <%= link_to image_tag('1/profile7.png'), user_path(current_user) %><span class="caret"></span>
        </button>
        <ul class="dropdown-menu pull-right" role="menu">
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
          <li><%= link_to "Sell an item", "/offers/new" %></li>
          <li><%= link_to "+ Add credit", buycredit_path %></li>
          <li class="divider"></li>
          <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
        </ul>
      </div>
      
    </div>