<% meta title: "Edit Your Offer" %>

<div class="row">
  
  <%= simple_form_for(@offer) do |f| %>
  
<div class="col-xs-3">
    <div class="field">
      <% if @offer.image_a_url.blank? %>
        <%= image_tag("1/user_no_image.PNG", width: '60', height: '60', class: 'img-thumbnail') %>
      <% else %>
        <%= image_tag(@offer.image_a_url(:thumb).to_s, width: '60', height: '60', class: 'img-thumbnail') %>
      <% end %><br>
      <%= f.file_field :image_a %>
    </div><hr>
    <div class="field">
      <% if @offer.image_b_url.blank? %>
        <%= image_tag("1/user_no_image.PNG", width: '60', height: '60', class: 'img-thumbnail') %>
      <% else %>
        <%= image_tag(@offer.image_b_url(:thumb).to_s, width: '60', height: '60', class: 'img-thumbnail') %>
      <% end %><br>
      <%= f.file_field :image_b %>
    </div><hr>
    <div class="field">
      <% if @offer.image_c_url.blank? %>
        <%= image_tag("1/user_no_image.PNG", width: '60', height: '60', class: 'img-thumbnail') %>
      <% else %>
        <%= image_tag(@offer.image_c_url(:thumb).to_s, width: '60', height: '60', class: 'img-thumbnail') %>
      <% end %><br>
      <%= f.file_field :image_c %>
    </div><hr>
    <div class="field">
      <% if @offer.image_d_url.blank? %>
        <%= image_tag("1/user_no_image.PNG", width: '60', height: '60', class: 'img-thumbnail') %>
      <% else %>
      <%= image_tag(@offer.image_d_url(:thumb).to_s, width: '60', height: '60', class: 'img-thumbnail') %>
      <% end %><br>
      <%= f.file_field :image_d %>
    </div><hr>
</div>

<div class="col-xs-5">
    <% if @offer.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @offer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <b>Title</b><br>
      <%= f.text_field :name, class: "form-control", :required => true %><br>
    </div>

    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control description", :required => true %>
    </div>

    <div class="field">
      <%= f.radio_button :new, true, checked: true %> New
      <%= f.radio_button :new, false %> Used
    </div><br>
  
    <div class="field">
      Categories (max <b>3</b>)<br><br>
      <small><mark>* separate by commas</mark></small><br><br>
      <%= f.text_field :tag_list, class: "form-control", placeholder: "e.g. electronics, monitors" %>
    </div><br>
  
    <div class="field">
      <%= f.input :location, :input_html =>{:id => 'gmaps-input-address', class: "form-control devise", placeholder: "Any"}, :required => true %><br>      
    </div><br><br>

    <%= f.hidden_field :user_id, value: @offer.user.id %>

    <div class="actions" align="right">
      <%= f.submit "Save", class: "btn btn-primary", data: { disable_with: "Saving..." } %>
    </div> <hr>
  
  <div style="color:red"><%= f.check_box :deleted %> <i>delete this offer</i></div>

</div>

<div class="col-xs-4">
  
<hr>
    <div class="field">
      <% if @offer.image_url.blank? %>
        <%= image_tag("1/user_no_image.PNG", width: '60', height: '60', class: 'img-thumbnail') %>
      <% else %>
        <%= image_tag(@offer.image_url(:thumb).to_s, width: '60', height: '60', class: 'img-thumbnail') %>
      <% end %>
      <b>Cover photo</b><br>
      <small>(min 200x200)</small><br><br>
      <%= f.file_field :image %>
    </div>
<hr>  
  
    <div class="field">
      <%= f.label :price %>
      $ <%= f.number_field :price, class: "form-control short", :required => true %>
    </div>
<hr>
  
</div>

<% end %>
  
</div>