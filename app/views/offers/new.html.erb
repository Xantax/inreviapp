<% meta title: "List Your Product" %>

<div class="row">
  
<div class="col-xs-2"></div>
  
<div class="col-xs-5">
  <%= simple_form_for(@offer) do |f| %>
    <% if @offer.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @offer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <b>Title</b><br>
      <%= f.text_field :name, class: "form-control", :required => true %><br>
    </div>

    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control description", :required => true %>
    </div>

    <div class="field">
      <%= f.radio_button :new, true, checked: true %> New
      <%= f.radio_button :new, false %> Used
    </div><br>
  
    <div class="field">
      Categories (max <b>3</b>)<br><br>
      <small><mark>* separate by commas</mark></small><br><br>
      <%= f.text_field :tag_list, class: "form-control", placeholder: "e.g. electronics, monitors" %>
    </div><br>
  
    <div class="field">
      <%= f.input :location, :input_html =>{:id => 'gmaps-input-address', class: "form-control", placeholder: "Any"}, :required => true %><br>      
    </div><br><br>

      <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="actions" align="right">
      <%= f.submit "Submit for review", class: "btn btn-primary", data: { disable_with: "Creating..." } %>
    </div> <hr>
</div>
  
  <div class="col-xs-3"><hr>
    <div class="field">
        <% if @offer.image_url.blank? %>
          <%= image_tag("1/user_no_image.PNG", width: '60', height: '60', class: 'img-thumbnail') %>
        <% else %>
          <%= image_tag(@offer.image_url(:thumb).to_s, width: '60', height: '60', class: 'img-thumbnail') %>
        <% end %>
        <b>Cover photo</b><br>
        <small>(min 200x200)</small><br><br>
        <%= f.file_field :image %>
      </div><hr>  
      <div class="field">
        <%= f.label :price %>
        $ <%= f.number_field :price, class: "form-control short", :required => true %>
    </div><hr>    
      <div class="field">
        <%= f.label :quantity %>
        <%= f.number_field :quantity, class: "form-control short", :required => true %>
    </div>
  </div>

<% end %>
  
</div>