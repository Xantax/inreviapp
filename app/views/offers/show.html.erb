<div class="row">
  
 <p id="notice"><%= notice %></p>
  <div class="col-xs-3">

    <% if current_user == @offer.user %> 
    
          <small>Promote your offer on home page for <b>2</b> days.</small><br><br>

        <%= form_for([@offer, @offer.promoted_offers.build]) do |f| %>

          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :offer_id, value: @offer.id %>

            <span class="label label-primary">50</span> <%= link_to image_tag('1/in_coin_header.png'), buycredit_path %> 
            <%= f.submit "Promote it", class: 'btn btn-warning' %>

        <% end %><hr>
    
    <% end %>
    
    <% if current_user == @offer.user %>
      <%= link_to "Edit", edit_offer_path(@offer), class: 'btn btn-sm btn-success' %><hr>
    <% end %>
    
    <div id="offer-price">
      $ <%= @offer.price %>
    </div>
  </div>

  <div class="col-xs-7 offer-center">
    <div id="offer-name">
      <%= @offer.name %>
    </div><hr>
    <div align="center">
      <%= image_tag(@offer.image, width: '480') %>
    </div>
    <hr><%= simple_format(@offer.description) %> - Created: <i><%= time_ago_in_words(@offer.created_at) %> ago</i>
  </div>

  <div class="col-xs-2">
    <% if @offer.user.image_url.blank? %>
      <%= image_tag("1/user_no_image.PNG", class: 'img-thumbnail') %>
    <% else %>
      <%= image_tag(@offer.user.image_url(:thumb).to_s, class: 'img-thumbnail') %>
    <% end %><hr>
    <%= @offer.user.name %><br><br>
    
    <% if user_signed_in? %>
      <% unless current_user == @offer.user %> 
        <%= form_for([@offer, @offer.conversations.build]) do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :offer_id, value: @offer.id %>
            <%= f.hidden_field :recipient_id, value: @offer.user.id %>
          <div class="actions"><%= f.submit "Contact", class: 'btn btn-warning' %></div>
        <% end %>
      <% end %>
    <% end %>
    
  </div>
  
</div>