        <%= form_for([@offer, @promoted_offer]) do |f| %>
          <% if @promoted_offer.errors.any? %>
              <div id="error_explanation">
                <ul>
                <% @promoted_offer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

          <%= f.hidden_field :user_id, value: @offer.user.id %>
          <%= f.hidden_field :offer_id, value: @offer.id %>
          <%= f.text_field :name, value: @offer.name %>
          <%= f.text_field :location, value: @offer.location %>
          <%= f.text_field :tag_list, value: @offer.tag_list %>
          <%= f.text_field :image, value: @offer.image %>
          <%= f.number_field :price, value: @offer.price %>

          How many clicks do you want? <br>
          <%= f.number_field :set_clicks %><br><br>

            <%= f.submit "Promote it", class: 'btn btn-warning' %>

        <% end %>