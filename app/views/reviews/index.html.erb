<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>Positive</th>
      <th>Body</th>
      <th>Proof</th>
      <th>Image</th>
      <th>Offer</th>
      <th>Buyer</th>
      <th>Seller</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.positive %></td>
        <td><%= review.body %></td>
        <td><%= review.proof %></td>
        <td><%= review.image %></td>
        <td><%= review.offer %></td>
        <td><%= review.buyer_id %></td>
        <td><%= review.seller_id %></td>
        <td><%= review.order %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

