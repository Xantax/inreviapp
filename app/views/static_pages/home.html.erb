<% if user_signed_in? %>


<% if current_user.user_identifications.count == 1 %>
<% else %>
  <div class="row">

    <div class="col-xs-10">
      <p id="notice"><%= notice %></p>
    </div>

    <div class="col-xs-2">
      <%= render 'user_verification' %>
    </div>

  </div>
<% end %>

<% else %>

  <br><br>
  <div class="row">

    <div class="col-xs-6">

      <div align="center">
        <%= image_tag('1/signal_orange.png') %> Digital Market - apps, tutorials, writing, marketing...
      </div>
      
      <hr><br>

      <div class="col-xs-6 left-home">
        <%= image_tag('1/gift_bonus.png') %> <b>$10</b> CREDIT<hr>
        <%= image_tag('1/verified.png') %> VERIFIED USERS<hr>
        <%= image_tag('1/unlimited_list.png') %> FREE LISTINGS
      </div>

      <div class="col-xs-6 left-home">
        <%= image_tag('1/no_fee.png') %>NO FEES<hr>
        <%= image_tag('1/any_pay.png') %> ANY PAYMENT<hr>
        <%= image_tag('1/low_price.png') %> LOWEST PRICES
      </div>

    </div>

    <div class="col-xs-6" align="center">
      
    <p id="notice"><%= notice %></p>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <% if resource.errors.any? %>
            <div id="error_explanation">
              <ul>
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

        <div><%= f.text_field :name, autofocus: true, placeholder: "name", class: "form-control devise", :required => true %></div><br>
        <div><%= f.email_field :email, placeholder: "email", class: "form-control devise", :required => true %></div><br>
        <div><%= f.password_field :password, placeholder: "password", class: "form-control devise", :required => true %></div><br>
        <div><%= f.hidden_field :sms_code, value: Random.rand(100000..999999) %></div><br>
        <div><%= f.submit "Create my account", class: "btn btn-primary", data: { disable_with: "Creating..." } %></div>

     <% end %>

      <br> or <b><%= link_to "Sign in", 'users/sign_in' %></b>

    </div>

  </div>

<br><br><br>

<% end %>

