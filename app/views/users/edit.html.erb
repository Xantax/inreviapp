<%= form_for :user, url: user_path(@user), method: :patch do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<div class="row">
  <div class="col-xs-3">
    <% if @user.image_url.blank? %>
      <%= image_tag("1/user_no_image.PNG", width: '60', height: '60', class: 'img-thumbnail') %>
    <% else %>
      <%= image_tag(@user.image_url(:thumb).to_s, width: '60', height: '60', class: 'img-thumbnail') %>
    <% end %>
    Change image:<br><br>
    <%= f.file_field :image %>
  </div>
  
  <div class="col-xs-4">
    <%= f.text_area :bio, placeholder: "About me", class: "form-control devise text" %><br>
  </div>
  <div class="col-xs-4">
      Location
    <%= f.text_field :public_location, placeholder: "e.g. San Francisco", class: "form-control devise" %><br>
      First Language<br>
    <%= f.select :language, collection: LanguageList::COMMON_LANGUAGES.map{|l| [l.name, l.iso_639_1]} %><br><br>
      Second Language<br>
    <%= f.select :second_language, collection: LanguageList::COMMON_LANGUAGES.map{|l| [l.name, l.iso_639_1]} %>
  </div> 
  
</div>

  <% if current_user.admin %>
    <%= f.text_field :name %>
    <%= f.text_field :email %>
    <%= f.text_field :credit %>
    <%= f.check_box :banned %>
  <% end %>
    <br>
    <%= f.submit "Update", class: "btn btn-default" %>

<% end %>