<% meta title: "Edit Your Profile" %>

<%= simple_form_for :user, url: user_path(@user), method: :patch do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

    <% if @user.image_url.blank? %>
      <%= image_tag("1/user_no_image.PNG", width: '60', height: '60', class: 'img-thumbnail') %>
    <% else %>
      <%= image_tag(@user.image_url(:thumb).to_s, width: '60', height: '60', class: 'img-thumbnail') %>
    <% end %>
    Change image:<br><br>
    <%= f.file_field :image %><hr>
    <b>About me:</b><br>
    <%= f.text_area :bio, class: "form-control", rows: 3 %><br>
    <%= f.input :public_location, :input_html =>{:id => 'gmaps-input-address', class: "form-control"} %><br><br>
  
    <%= f.submit "Update", class: "btn btn-primary" %>

<% end %>