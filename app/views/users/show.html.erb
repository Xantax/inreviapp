<div class="row">
  
<div class="col-xs-3">
  <% if @user.image_url.blank? %>
    <%= image_tag("1/user_no_image.PNG", class: 'img-thumbnail') %>
  <% else %>
    <%= image_tag(@user.image_url(:thumb).to_s, class: 'img-thumbnail') %>
  <% end %>
</div>

<div class="col-xs-4">
  <div class="user-profile-name">
    <% if @user.user_identifications.count == 1 %>
      <%= image_tag('1/user_verified.png') %>
    <% else %>
      <%= image_tag('1/user_not_verified.png') %>
    <% end %>
    <%= @user.name %>
  </div>

  Active: <b><%= time_ago_in_words(@user.last_seen_at) %></b> ago
</div>
  
<div class="col-xs-5" align="left">
  <%= image_tag('1/clock40.png') %>Joined: <b><%= time_ago_in_words(@user.created_at) %></b> ago<br>
  <% if @user.public_location.present? %>
    <%= image_tag('1/user_location.png') %><%= @user.public_location %><br>
  <% end %>
  <% if @user.language.present? %>
    <%= image_tag('1/user_language.png') %><%= @user.language %><br>
  <% end %>
  <% if @user.bio.present? %>
    <div class="img-thumbnail"><%= @user.bio %></div>
  <% end %>
</div>

</div>
<hr>  
<% if user_signed_in? && current_user.admin %>
  <% @user.phone_codes.each do |phone_code| %>
    <%= link_to 'Edit', edit_phone_code_path(phone_code) %>
  <% end %>
<% end %>

<div class="row">
  <% @user.offers.each do |offer| %>
    <div class="col-sm-6 col-md-3 offer">
      <div class="thumbnail">
        <%= link_to image_tag(offer.image_url(:thumb).to_s, height: '200'), offer %>
        <div class="caption">
          <%= link_to truncate(offer.name, length: 50), offer %><hr>
          <%= image_tag('2/thumbsup_off.PNG') %> <b>15</b> | 
          <%= image_tag('2/thumbsdown_off.PNG') %> <b>1</b>
          <span class="offer-price-box"><mark>$<%= offer.price %></mark></span>
        </div>
      </div>
    </div>
  <% end %>
</div>