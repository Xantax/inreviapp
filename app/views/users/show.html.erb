<% meta title: "Profile" %>

<div class="row">
  
  <div class="col-xs-1"></div>

  <div class="col-xs-2 user-show-profile">
    
    <%= render 'follow_form' if user_signed_in? %>
    
      <% if @user.image_url.blank? %>
        <%= image_tag("1/user_no_image.PNG", class: 'img-thumbnail') %>
      <% else %>
        <%= image_tag(@user.image_url(:thumb).to_s, class: 'img-thumbnail') %>
      <% end %>

        <% if @user.phone_codes.count == 1 %>
          <% @user.phone_codes.first(1).each do |code| %>
              <% if code.code.to_i == @user.sms_code.to_i %>
                <%= image_tag('3/p_verified.png') %>
              <% end %>
           <% end %>
        <% end %>    
    
      <div class="user-profile-name">
          <%= @user.name %>
      </div><br><br>

        <%= image_tag('2/thumbsup_off.PNG') %>
          <b><%= @positive_reviews.count %></b> | 
        <%= image_tag('2/thumbsdown_off.PNG') %>
          <b><%= @negative_reviews.count %></b> <hr>

      <%= image_tag('2/green_dot.gif') %> 
      <span class="time-last-message"><b><%= time_ago_in_words(@user.last_seen_at) %></b> ago</span><br><br>
      <div id="user-settings-info">
        <%= image_tag('1/clock40.png') %>Joined: <b><%= time_ago_in_words(@user.created_at) %></b> ago<br>
        <% if @user.public_location.present? %>
          <%= image_tag('1/user_location.png') %><%= @user.public_location %><br>
        <% end %>
        <% if @user.bio.present? %>
          <%= image_tag('2/user_bio.png') %>
          <%= @user.bio %>
        <% end %>
      </div>

    <hr>  
    <% if user_signed_in? && current_user.admin %>
      <% @user.phone_codes.each do |phone_code| %>
        <%= link_to 'Edit', edit_phone_code_path(phone_code) %><br>
      <% end %>
    <% end %>
    
    <%= render 'shared/follow_stats' %><hr>
    
    <% if current_user?(@user) %>
    <%= image_tag('2/user_settings.png') %><%= link_to "Settings", edit_user_path(@user), target: :_blank %>
    <% end %>
  
  </div>

  <div class="col-xs-8">
    <% @user_offers.each do |offer| %>
      <div class="col-sm-6 col-md-3 offer">
        <div class="thumbnail">
          <%= link_to image_tag(offer.image_url(:thumb).to_s, height: '200'), offer %>
          <div class="caption">
           <%= link_to truncate(offer.name, length: 50), offer %><hr>
            <%= image_tag('2/thumbsup_off.PNG') %> 
            <b><%= offer.reviews.positive.where("buyer_id != ?", offer.user.id).count %></b> | 
            <%= image_tag('2/thumbsdown_off.PNG') %> 
            <b><%= offer.reviews.negative.where("buyer_id != ?", offer.user.id).count %></b>
           <span class="offer-price-box">
             <mark><%= number_to_currency(offer.price) %></mark>
            </span>
          </div>
        </div>
      </div>
    <% end %>

        <div class="digg_pagination">
           <%= will_paginate @user_offers, :page_links => false %>
        </div>
  </div>

  <div class="col-xs-1"></div>
  
</div>