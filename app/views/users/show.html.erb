<% meta title: "Profile" %>

<div class="row">
  
<div class="col-xs-3">
  <% if @user.image_url.blank? %>
    <%= image_tag("1/user_no_image.PNG", class: 'img-thumbnail') %>
  <% else %>
    <%= image_tag(@user.image_url(:thumb).to_s, class: 'img-thumbnail') %>
  <% end %>
</div>

<div class="col-xs-4">
  <div class="user-profile-name">
      <%= @user.name %>
  </div>
  
    <% if @user.phone_codes.count == 1 %>
      <% @user.phone_codes.first(1).each do |code| %>
          <% if code.code.to_i == @user.sms_code.to_i %>
            <%= image_tag('2/phone_verified.png') %>
          <% end %>
       <% end %>
    <% end %> 
  
    <% if @user.user_identifications.count == 1 %>
      <%= image_tag('2/user_verified.png') %>
    <% end %>
  
    <br><br>
  
    <%= image_tag('2/thumbsup_off.PNG') %>
      <b><%= @positive_reviews.count %></b> | 
    <%= image_tag('2/thumbsdown_off.PNG') %>
      <b><%= @negative_reviews.count %></b>
  
</div>
  
<div class="col-xs-5" align="left">
  Active: <b><%= time_ago_in_words(@user.last_seen_at) %></b> ago<br><br>
  <%= image_tag('1/clock40.png') %>Joined: <b><%= time_ago_in_words(@user.created_at) %></b> ago<br>
  <% if @user.public_location.present? %>
    <%= image_tag('1/user_location.png') %><%= @user.public_location %><br>
  <% end %>
  <% if @user.language.present? %>
    <%= image_tag('1/user_language.png') %><%= @user.language %><br>
  <% end %>
  <% if @user.bio.present? %>
    <%= image_tag('2/user_bio.png') %>
    <%= @user.bio %>
  <% end %>
</div>

</div>
<hr>  
<% if user_signed_in? && current_user.admin %>
  <% @user.phone_codes.each do |phone_code| %>
    <%= link_to 'Edit', edit_phone_code_path(phone_code) %>
  <% end %>
<% end %>

<div class="row">
  <% @user_offers.each do |offer| %>
    <div class="col-sm-6 col-md-3 offer">
      <div class="thumbnail">
        <%= link_to image_tag(offer.image_url(:thumb).to_s, height: '200'), offer %>
        <div class="caption">
         <%= link_to truncate(offer.name, length: 50), offer %><hr>
         <%= image_tag('2/thumbsup_off.PNG') %> <b><%= offer.reviews.positive.where("buyer_id != ?", offer.user.id).count %></b> | 
          <%= image_tag('2/thumbsdown_off.PNG') %> <b><%= offer.reviews.negative.where("buyer_id != ?", offer.user.id).count %></b>
         <span class="offer-price-box"><mark>$<%= offer.price %></mark></span>
        </div>
      </div>
    </div>
  <% end %>
      
      <div class="digg_pagination">
         <%= will_paginate @user_offers, :page_links => false %>
  </div>
</div>